<% content_for :head_top do %>
    <title>Cigar City CrossFit Blog Category Page</title>
    <meta name="description" content="See all the available categories we have listed on our blog.">
<% end %>

<header style="background-image: url('https://cftaskforce.files.wordpress.com/2016/01/wall-back2.jpg');">
    <div class="intro-content">
        <h1 class="brand-name"><%= @category.name %></h1>
        <hr class="colored">
        <div class="brand-name-intro">Recent Posts<div>
    </div>
</header>

<section>
	<div class="container">
        <div class="col-md-8">
            <% @category.recent_posts.each do |post| %>
                <%= render :partial => 'buttercms/posts/post', :locals => {:post => post} %>
            <% end %>
        </div>
        <div class="col-md-4">
            <h2 style="padding-left:40px">Categories</h2>
            <% @categories.each do |category| %>
                <ul>
                    <li class="btn btn-full btn-outline-dark">
                        <%= link_to "#{category.name} (#{category.recent_posts.size})", buttercms_category_path(category.slug), :title => category.name %>
                    </li>
                </ul>
            <% end %>
        </div>
	   
	</div>
</section>

