
<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Lead List</h1>

  <table class="table">
    <thead>
      <tr>
        <th>First name</th>
        <th>Email</th>
        <th>Phone number</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @leads.each do |lead| %>
        <tr>
          <td><%= lead.first_name %></td>
          <td><%= lead.email %></td>
          <td><%= lead.phone_number %></td>
          <td><%= link_to 'Edit', edit_lead_path(lead) %></td>
          <td><%= link_to 'Destroy', lead, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Lead', new_lead_path %>

</div>  

