<% content_for :head_top do %>
    <title>Cigar City CrossFit Blog</title>
    <meta name="description" content="Stay up to date on all things Cigar City CrossFit by checking out our blog. We post awesome content at least once a week. Expect posts on nutrition, training, CrossFit news, Gym updates and the hilarious musings of CEO Benjamin Bunn.">
<% end %>

<header style="background-image: url('https://cftaskforce.files.wordpress.com/2016/01/rings-header.jpg');">
    <div class="intro-content">
        <div class="brand-name-intro">Blog<div>
        <hr class="colored">
        <div class="brand-name">Learn Up</div>
    </div>
</header>

<section>
	<div class="container">
		<%= render partial: "blog/post", collection: @recent_posts %>	
		<%= render partial: "blog/pagers", locals: {next_page: @next_page, previous_page: @previous_page} %>
	</div>
</section>