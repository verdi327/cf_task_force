<h1>All Messages</h1>

<%#= link_to "Auth With FrontDesk", "https://frontdeskhq.com/oauth/authorize?client_id=H976y2NokSuqQbjup6UaBJS0YvLQcbtfSTePrBQt&response_type=code&redirect_uri=http://localhost:3000/fdhq-callback
", class: "btn btn-outline-dark" %>

<%= link_to "Create New Text Message", new_admin_message_path, class: "btn btn-outline-dark" %>

<table class="table">
  <thead>
    <tr>
      <th>Message</th>
      <th>Created By</th>
      <th>Sent On</th>
      <th>Total Recipients</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.body %></td>
        <td><%= message.created_by %></td>
        <td><%= message.created_at.strftime("%a, %b %d %Y")%> at <%=message.created_at.strftime("%-I:%M %p")%></td>
        <td><%= message.recipient_total %></td>
        <td><%= link_to 'Show', admin_message_path(message) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

