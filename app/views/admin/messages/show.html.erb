<h1>Message - <%= @message.id%></h1>

<h3>Message</h3>
<p><%= @message.body %></p>

<h3>Created By</h3>
<p><%= @message.created_by %></p>

<h3>Sent On</h3>
<p><%= @message.created_at.strftime("%a, %b %d %Y")%> at <%=@message.created_at.strftime("%-I:%M %p")%></p>

<h3>Total Recipients</h3>
<p><%=@message.recipient_total%></p>

<h3>Recipient List</h3>
<% @message.recipients.each do |recipient| %>
	<p><%=recipient%></p>
<% end %>

<div class="nav-actions">
	<%= link_to 'All Messages', admin_messages_path %>
</div>