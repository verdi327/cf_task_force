<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Description</th>
      <th>Priority</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
	  <tr>
	    <td><%= @coach.name %></td>
	    <td><%= @coach.title %></td>
	    <td><%= @coach.description %></td>
	    <td><%= @coach.priority %></td>
	  </tr>
  </tbody>
</table>


<p><strong>Images:</strong></p>
<div class="row">
	<% @coach.images.each_with_index do |image, index| %>
		<div class="col-md-3">
			<%= image_tag(image.url, class: "img img-responsive") %>
			<%= link_to fa_icon('times-circle-o'), admin_coach_image_path(@coach, index), :method => :delete, data: { confirm: "Are you sure you want to delete this image?" }, class: "fa-4x delete-btn" %>
		</div>
	<% end %>
</div>

<section>
	<h2 style="margin-left:-15px">Add More Images</h2>
	<%= form_for @coach, url: admin_coach_images_path(@coach), method: :post do |f| %>
		<div class="row control-group">
		  <div class="form-group">
		    <%= f.label :images %><br>
		    <%= f.file_field :images, multiple: true %>
		  </div>
		</div>

		<div class="row" style="margin-top:15px">
		  <%= f.submit "Add More Images", class:  "btn btn-outline-dark" %>
		</div>
	<% end %>

	<div class="nav-actions">
		<%= link_to 'Edit', edit_admin_coach_path(@coach) %> |
		<%= link_to 'Back', admin_coaches_path %>
	</div>
</section>
